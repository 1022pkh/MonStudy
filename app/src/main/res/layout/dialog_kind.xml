<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#80000000"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/wd_room"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="74dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="업종"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#FFC400"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:gravity="right">

            <CheckBox
                android:id="@+id/totalKindChk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:textColor="#989898"
                android:textSize="13sp"
                android:text="전체"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <CheckBox
                    android:id="@+id/chkbox1"
                    android:layout_width="88dp"
                    android:layout_height="30dp"
                    android:text="회의실"
                    android:textSize="16sp"
                    android:textColor="#818181"
                    android:gravity="center"
                    android:button="@android:color/transparent"
                    android:background="#60B0CC"/>
                <CheckBox
                    android:id="@+id/chkbox2"
                    android:layout_width="88dp"
                    android:layout_height="30dp"
                    android:text="세미나실"
                    android:textSize="16sp"
                    android:textColor="#818181"
                    android:gravity="center"
                    android:button="@android:color/transparent"
                    android:background="#60B0CC"
                    android:layout_marginLeft="1dp"/>
                <CheckBox
                    android:id="@+id/chkbox3"
                    android:layout_width="88dp"
                    android:layout_height="30dp"
                    android:text="다목적실"
                    android:textSize="16sp"
                    android:textColor="#818181"
                    android:gravity="center"
                    android:button="@android:color/transparent"
                    android:background="#60B0CC"
                    android:layout_marginLeft="1dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="1dp"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/chkbox4"
                    android:layout_width="88dp"
                    android:layout_height="30dp"
                    android:text="스터디"
                    android:gravity="center"
                    android:button="@android:color/transparent"
                    android:textSize="16sp"
                    android:textColor="#818181"
                    android:background="#60B0CC"/>
                <CheckBox
                    android:id="@+id/chkbox5"
                    android:layout_width="88dp"
                    android:layout_height="30dp"
                    android:text="연습"
                    android:gravity="center"
                    android:button="@android:color/transparent"
                    android:textSize="16sp"
                    android:textColor="#818181"
                    android:background="#60B0CC"
                    android:layout_marginLeft="1dp"/>
                <CheckBox
                    android:id="@+id/chkbox6"
                    android:layout_width="88dp"
                    android:layout_height="30dp"
                    android:text="카페"
                    android:gravity="center"
                    android:button="@android:color/transparent"
                    android:textSize="16sp"
                    android:textColor="#818181"
                    android:background="#60B0CC"
                    android:layout_marginLeft="1dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">
            <Button
                android:id="@+id/sendKind"
                android:background="@drawable/button_dialog_kind"
                android:layout_width="190dp"
                android:layout_height="34dp"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:padding="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="선택된 조건으로 검색"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>