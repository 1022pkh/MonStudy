<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_viewpager_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>

        <LinearLayout
            android:layout_below="@id/img_viewpager_character"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/char_name"
                android:layout_alignLeft="@id/img_viewpager_character"
                android:layout_alignRight="@id/img_viewpager_character"
                android:layout_alignTop="@id/img_viewpager_character"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="하비"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#E23E1E"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignLeft="@id/img_viewpager_character"
                android:layout_alignRight="@id/img_viewpager_character"
                android:layout_alignBottom="@id/img_viewpager_character">

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/info1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="관심사 "
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#E23E1E"/>

                    <TextView
                        android:id="@+id/info2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 예술, 문화"
                        android:textSize="13sp"
                        android:textColor="#E23E1E"/>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/info3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="자주 찾는 공간 "
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#E23E1E"/>

                    <TextView
                        android:id="@+id/info4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 취미활동을 위한 스터디룸"
                        android:textSize="13sp"
                        android:textColor="#E23E1E"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>