<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="steam.appjam.sopt.com.myapplication.login.view.LoginActivity">
    <RelativeLayout
        android:id="@+id/TopTitle"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"
        android:background="#ffffff">

        <TextView
            android:id="@+id/main_toolbar_title"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:text="d"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>



    </RelativeLayout>
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="280dp"
        android:layout_height="400dp"
        android:background="@drawable/ic_login">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="100dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그인"
                android:textSize="25sp"
                android:textColor="#60B0CC"/>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/login_edit_id"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_gravity="center_horizontal"
                    android:hint="아이디를 입력하세요"
                    android:singleLine="true"
                    android:textColorHint="#9D9D9D"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:background="@drawable/edittext_join" />

                <EditText
                    android:layout_marginTop="14dp"
                    android:id="@+id/login_edit_passwd"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_gravity="center_horizontal"
                    android:hint="비밀번호를 입력하세요"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:textColorHint="#9D9D9D"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:background="@drawable/edittext_join"/>


                <Button
                    android:layout_gravity="end"
                    android:layout_marginTop="6dp"
                    android:id="@+id/login_btn_join"
                    android:layout_width="60dp"
                    android:layout_height="15dp"
                    android:textColor="#C94948"
                    android:textSize="10sp"
                    android:background="@drawable/button_login_join"
                    android:text="회원가입"
                    android:clickable="false"
                    style="?android:attr/borderlessButtonStyle"/>

            </LinearLayout>

            <Button
                android:id="@+id/login_btn_login"
                android:layout_marginTop="30dp"
                android:layout_width="94dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_join"
                android:text="로그인"
                android:textSize="16sp"
                android:textColor="#ffffff"
                style="?android:attr/borderlessButtonStyle"
                />
        </LinearLayout>

    </RelativeLayout>

    <!--그림자랑 밑에 줄쫙 그어져있는거 아직 못함-->


</RelativeLayout>